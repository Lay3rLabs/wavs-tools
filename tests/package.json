{
    "scripts": {
        "test": "bun test src --reporter=junit --reporter-outfile=.test-reports/junit.xml",
        "test:coverage": "bun test src --coverage --coverage-reporter=lcov --coverage-dir=.test-reports/coverage",
        "test:watch": "bun test src --watch",
        "test:clean": "rm -rf .test-reports coverage"
    },
    "devDependencies": {
        "@types/bun": "^1.2.20",
        "@types/node": "^24.0.3",
        "typescript": "^5.8.3",
        "wait-port": "^1.1.0"
    }
}
